{
	"extends": "@companion-module/tools/tsconfig/node18/recommended",
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules/**", "src/**/*spec.ts", "src/**/__tests__/*", "src/**/__mocks__/*"],
	"compilerOptions": {
		"outDir": "./dist",
		"strict": true,
		"baseUrl": "./",
		"paths": {
			"*": ["./node_modules/*"]
		}
	}
}
